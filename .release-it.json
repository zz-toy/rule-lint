{
    "git": {
        "commitMessage": "release: v${version}",
        "commit": true,
        "tag": true,
        "push": true
    },
    "github": {
        "release": true
    },
    "npm": {
        "publish": false
    },
    "hooks": {
        "after:bump": "echo 更新版本成功"
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "infile": "CHANGELOG.md",
            "preset": {
                "name": "conventionalcommits",
                "header": "# Changelog",
                "types": [
                    {
                        "type": "feat",
                        "section": "Features"
                    },
                    {
                        "type": "fix",
                        "section": "Bug Fixes"
                    },
                    {
                        "type": "chore",
                        "hidden": true
                    },
                    {
                        "type": "docs",
                        "hidden": true
                    },
                    {
                        "type": "style",
                        "hidden": true
                    },
                    {
                        "type": "refactor",
                        "hidden": true
                    },
                    {
                        "type": "perf",
                        "hidden": true
                    },
                    {
                        "type": "test",
                        "hidden": true
                    }
                ]
            }
        }
    }
}